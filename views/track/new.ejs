
<form action="/track/show" method="POST" id="tracker-entry">
    <div class="input-group-prepend">
        <span class="input-group-text" id="date-field">Date</span>
      </div>
      <input type="text" name="date" class="form-control" placeholder="<%= today %>" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div id="elevated">
        <label for="elevated"><h3>Elevated Mood</h3></label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="elevated" id="inlineRadio1" value="0">
            <label class="form-check-label" for="inlineRadio1">None</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="elevated" id="inlineRadio2" value="1">
            <label class="form-check-label" for="inlineRadio2">Mild</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="elevated" id="inlineRadio3" value="2" >
            <label class="form-check-label" for="inlineRadio3">Moderate</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="elevated" id="inlineRadio3" value="3" >
            <label class="form-check-label" for="inlineRadio3">Severe</label>
        </div>
    </div><br />

    <div id="depressed">
        <label for="depressed"><h3>Depressed</h3></label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="depressed" id="inlineRadio1" value="0">
            <label class="form-check-label" for="inlineRadio1">None</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="depressed" id="inlineRadio2" value="1">
            <label class="form-check-label" for="inlineRadio2">Mild</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="depressed" id="inlineRadio3" value="2" >
            <label class="form-check-label" for="inlineRadio3">Moderate</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="depressed" id="inlineRadio3" value="3" >
            <label class="form-check-label" for="inlineRadio3">Severe</label>
        </div>
    </div><br />

    <div id="irritable">
        <label for="irritable"><h3>Irritable</h3></label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="irritable" id="inlineRadio1" value="0">
            <label class="form-check-label" for="inlineRadio1">None</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="irritable" id="inlineRadio2" value="1">
            <label class="form-check-label" for="inlineRadio2">Mild</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="irritable" id="inlineRadio3" value="2" >
            <label class="form-check-label" for="inlineRadio3">Moderate</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="irritable" id="inlineRadio3" value="3" >
            <label class="form-check-label" for="inlineRadio3">Severe</label>
        </div>
    </div><br />
    
    <div id="anxious">
        <label for="anxious"><h3>Anxious</h3></label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="anxious" id="inlineRadio1" value="0">
            <label class="form-check-label" for="inlineRadio1">None</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="anxious" id="inlineRadio2" value="1">
            <label class="form-check-label" for="inlineRadio2">Mild</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="anxious" id="inlineRadio3" value="2" >
            <label class="form-check-label" for="inlineRadio3">Moderate</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" name="anxious" id="inlineRadio3" value="3" >
            <label class="form-check-label" for="inlineRadio3">Severe</label>
        </div>
    </div>
    <input type="submit" class="btn btn-primary"></input>
</form>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
