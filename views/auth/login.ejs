<div class="auth">
  <form action="/auth/login" method="POST">

  <div class="form-group">
    <label class="form-label" for="auth-email">Email</label>
    <input class="form-control" id="auth-email" type="email" name="email">
  </div>

  <div class="form-group">
    <label class="form-label" for="auth-password">Password</label>
    <input class="form-control" id="auth-password" type="password" name="password">
    <small class="form-text text-muted">Not registered? <a href="/auth/signup">Sign up now.</a></small>

  </div>

  <button type="submit" class="btn btn-primary">Login</button>

</form>
</div>