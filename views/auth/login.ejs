<div class="auth">
  <form action="/auth/login" method="POST">
  <div class="form-group">
    <label for="auth-email">Email</label>
    <input class="form-control" id="auth-email" type="email" name="email">
  </div>

  <div class="form-group">
    <label for="auth-password">Password</label>
    <input class="form-control" id="auth-password" type="password" name="password">
  </div>
  <input type="submit" value="Log In">
</form>
</div>